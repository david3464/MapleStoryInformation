<div class="form-group">
    <label for="number">Question Number</label>
    <input type="number" min="1" id="number" name="number" class="form-control" placeholder="Enter Question Number" value="<%= question.number %>"/>
</div>
<div class="form-group">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" class="form-control" placeholder="Enter Question Title" value="<%= question.title %>"/>
</div>
<div class="form-group">
    <label for="exampleFormControlSelect1">Category-Type</label>
    <select class="form-control" id="exampleFormControlSelect1" name="type">
        <% categories.forEach(category => { %>
            <% if (category.id === question.type) { %> 
                <option selected label="<%= category.category_name%>/<%= category.type_name%>" value="<%=category.id %>">
            <%} else {%>
                <option label="<%= category.category_name%>/<%= category.type_name%>" value="<%=category.id %>">
            <% } %>
        <%})%>
    </select>
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea class="form-control" name="description"><%= question.description %></textarea>
</div>
